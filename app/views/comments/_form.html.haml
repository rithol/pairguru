= form_for([@movie, @movie.comments.build], html: {class: 'form-horizontal'}) do |f|
  %div(class="field form-group")
    %div(class="col-sm-10")
      = f.text_area :message, class: 'form-control'
  %div(class="actions form-group")
    %div(class="col-sm-10")
      = f.submit "Send", class:'btn btn-sm btn-default'
